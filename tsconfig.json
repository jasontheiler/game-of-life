{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "types": ["@types/node", "@nuxt/types"]
  },
  "exclude": ["./.nuxt", "./dist", "./node_modules"]
}
